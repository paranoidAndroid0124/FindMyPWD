<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindMyPLWD.CheckPLWDPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="CadetBlue" Padding="24" CornerRadius="0">
                <Label Text="Check On PLWD" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Label x:Name="infoLabel" Text="This page is to demo the geofencing capability." />

            <Button x:Name="checkOnPlwdButton" Text="Check on PLWD" Clicked="checkOnPlwdButton_Clicked" />
            <Label x:Name="label1" Text="The PLWD was last seen at: " IsVisible="False"/>
            <Label x:Name="label2" Text="" />
            <Label x:Name="label3" Text="The Caregiver is at Carleton University @: " IsVisible="False" />
            <Label x:Name="label3_1" Text=" " />
            <Label x:Name="label4" Text="" />
            <Label x:Name="label5" Text="Result of Location Check:" IsVisible="False"/>
        
            <Label x:Name="resultLabel" Text="" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>