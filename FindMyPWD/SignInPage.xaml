<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindMyPLWD.SignInPage"
             NavigationPage.HasBackButton="False">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="CadetBlue" Padding="24" CornerRadius="0">
                <Label Text="Sign In" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Entry x:Name="emailEntry" Placeholder="Email" />
            <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />

            <Button x:Name="enterButton" Text="Enter" Clicked="enterButton_Clicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>