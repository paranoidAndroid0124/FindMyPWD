<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindMyPLWD.GeoFencingPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="CadetBlue" Padding="24" CornerRadius="0">
                <Label Text = "Set Geo-Fencing Range" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Button x:Name ="Range22" Text ="22 Metres" Clicked="Clicked_22"/>
            <Button x:Name ="Range33" Text ="33 Metres" Clicked="Clicked_33"/>
            <Button x:Name ="Range44" Text ="44 Metres" Clicked="Clicked_44"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>