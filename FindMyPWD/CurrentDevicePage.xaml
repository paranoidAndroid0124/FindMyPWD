<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindMyPLWD.CurrentDevicePage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="CadetBlue" Padding="24" CornerRadius="0">
                <Label Text = "Devices" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Button x:Name ="Edit" Text = "Edit a Device" Clicked="Edit_Clicked"/>
            <Button x:Name="Remove" Text = "Remove a Device" Clicked="Remove_Clicked"/>
            <Button Text = "View Current Devices" Clicked="View_Clicked"/>
            <Button x:Name ="Disconnect" Text="Disconnect from Device" Clicked="Disconnect_From_Device"/>
            <Label x:Name="ManageLabel"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>