<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasBackButton="False"
             x:Class="FindMyPLWD.SetupSafeZones">
    <ContentPage.Content>
        <StackLayout>
            <Label Text = "Safe Zone Creation" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
            <Entry x:Name="addressEntry" Placeholder="Enter address" />
            <Entry x:Name="safeDistance" Placeholder="Enter safe distance from location (meters)" Keyboard="Numeric"/>
            
            <!--<Label x:Name="Temp1" Text="This is where the address will go" />
            <Label x:Name="Temp2" Text="This is where the coordinates will go" />-->
            
            <Button x:Name="saveZoneButton" Text="Save" Clicked="saveZoneButton_Clicked" />
            <Button x:Name="nextButton" Text="Next" Clicked="nextButton_Clicked" IsEnabled="false"/>

            <!--<Label x:Name="Temp3" Text="This is where the Caregiver ID will go" />
            <Label x:Name="Temp4" Text="This is where the PLWD ID will go" />
            <Label x:Name="Temp5" Text="This is where the Watch ID will go" /> -->
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>