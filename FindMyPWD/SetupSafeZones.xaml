<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindMyPLWD.SetupSafeZones">
    <ContentPage.Content>
        <StackLayout>
            <Label Text = "Safe Zone Creation" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
            <Entry x:Name="addressEntry" Placeholder="Enter address" />
            <Entry x:Name="safeDistance" Placeholder="Enter safe distance from location in km" Keyboard="Numeric"/>

            <Button x:Name="saveZoneButton" Text="Save" Clicked="saveZoneButton_Clicked" />

            <Label x:Name="Temp1" Text="This is where the address will go" />
            <Label x:Name="Temp2" Text="This is where the coordinates will go" />



        </StackLayout>
    </ContentPage.Content>
</ContentPage>